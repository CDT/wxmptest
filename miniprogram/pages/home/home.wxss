.nav-right {
  margin-right: 16rpx;
}

.capsule {
  height: 52rpx;
  width: 96rpx;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0.25);
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
}

.capsule-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #fff;
}

.hero {
  margin: 24rpx 24rpx 0;
  padding: 32rpx 32rpx 40rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #5c82ff 0%, #7ba2ff 60%, #8eb7ff 100%);
  color: #fff;
  position: relative;
  overflow: hidden;
  animation: riseIn 0.5s ease both;
}

.hero-title {
  font-size: 34rpx;
  font-weight: 600;
}

.hero-subtitle {
  margin-top: 10rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

.hero-orbs {
  position: absolute;
  right: 24rpx;
  top: 12rpx;
  width: 180rpx;
  height: 120rpx;
}

.orb {
  position: absolute;
  border-radius: 50%;
  opacity: 0.35;
  background: #fff;
}

.orb-a {
  width: 88rpx;
  height: 88rpx;
  right: 10rpx;
  top: 6rpx;
}

.orb-b {
  width: 56rpx;
  height: 56rpx;
  right: 100rpx;
  top: 32rpx;
}

.orb-c {
  width: 36rpx;
  height: 36rpx;
  right: 40rpx;
  top: 90rpx;
}

.section {
  margin: 28rpx 24rpx 0;
  background: #fff;
  border-radius: 22rpx;
  padding: 20rpx 20rpx 10rpx;
  box-shadow: 0 12rpx 24rpx rgba(45, 66, 109, 0.08);
  animation: riseIn 0.6s ease both;
}

.section:nth-child(2) {
  animation-delay: 0.08s;
}

.section:nth-child(3) {
  animation-delay: 0.16s;
}

@keyframes riseIn {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.section-bar {
  width: 6rpx;
  height: 26rpx;
  background: #4a72ff;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.section-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2e3542;
}

.grid {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 10rpx;
}

.grid-item {
  width: 25%;
  padding: 16rpx 0 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grid-icon {
  width: 68rpx;
  height: 68rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.grid-icon-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
}

.grid-label {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #5b6372;
}
