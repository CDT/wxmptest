.nav-right {
  margin-right: 16rpx;
}

.capsule {
  height: 52rpx;
  width: 96rpx;
  border-radius: 28rpx;
  background: rgba(255, 255, 255, 0.25);
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 0 10rpx;
}

.capsule-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #fff;
}

.logo-card {
  margin: 30rpx 24rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-circle {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #4f79ff;
  color: #fff;
  font-size: 44rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(79, 121, 255, 0.35);
}

.login-title {
  margin-top: 18rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #2d3340;
}

.login-subtitle {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #7a8190;
}

.login-tabs {
  margin: 24rpx 24rpx 0;
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.login-tab {
  font-size: 24rpx;
  color: #7c8494;
  padding-bottom: 12rpx;
  position: relative;
}

.login-tab.active {
  color: #2f5eff;
  font-weight: 600;
}

.login-tab.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 70rpx;
  height: 6rpx;
  border-radius: 6rpx;
  background: #2f5eff;
}

.form-card {
  margin: 24rpx 24rpx 0;
  background: #fff;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(45, 66, 109, 0.08);
}

.input-row {
  display: flex;
  align-items: center;
  height: 84rpx;
}

.input-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 16rpx;
  border-radius: 10rpx;
  background: #e6ecff;
  position: relative;
}

.user-icon::before {
  content: '';
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #5b7cfe;
  top: 6rpx;
  left: 11rpx;
}

.user-icon::after {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 10rpx;
  border-radius: 10rpx 10rpx 6rpx 6rpx;
  background: #5b7cfe;
  bottom: 6rpx;
  left: 7rpx;
}

.lock-icon::before {
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  border-radius: 4rpx;
  background: #5b7cfe;
  bottom: 6rpx;
  left: 8rpx;
}

.lock-icon::after {
  content: '';
  position: absolute;
  width: 16rpx;
  height: 10rpx;
  border: 3rpx solid #5b7cfe;
  border-bottom: 0;
  border-radius: 10rpx 10rpx 0 0;
  top: 4rpx;
  left: 6rpx;
}

.input {
  flex: 1;
  font-size: 24rpx;
  color: #3a4050;
}

.divider {
  height: 1rpx;
  background: #edf0f6;
}

.action-btn {
  margin: 40rpx 24rpx 0;
  height: 84rpx;
  border-radius: 42rpx;
  background: #3b7cff;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(59, 124, 255, 0.35);
}

.help-text {
  margin-top: 60rpx;
  text-align: center;
  font-size: 22rpx;
  color: #8b93a2;
}
